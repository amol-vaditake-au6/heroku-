{{#if length}}
<h1 style="text-align: center;">Your blogs</h1>
<ul style="text-align: center;">
  {{#each blogs}}
  <li style="list-style: none;">
    <h3><em>Title</em> : <span style="color: chartreuse;">{{this.title}}</span></h3>
    <div style="width: 500px;height:200px;border:solid 5px rgb(255, 0, 170);margin: auto"><b><em> content
        </em></b>
      <p>{{this.body}}</p>
    </div>
    <div style="display: inline-block;">
      <a href={{constructUpdate}}><button>Edit</button></a>
      <form action={{constructDelete}} method="POST">
        <input type="submit" value="Delete"></form>
      <a href='/blog/create'><button>Create a more blog</button></a>

  </li>
  </div>
  {{/each}}

</ul>
{{else}}
<h1>Hey {{name}}. Create a new blog <a style="color: brown;" href='/blog/create'>here</a></h1>
{{/if}}