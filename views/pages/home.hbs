<div class="container">
    <div class="row ">
        {{#each products}}
        <div class="col-3 mx-auto">
            <div class="card " style="margin-left: 20px;margin-right: 20px;margin-top: 20px;">
                <img class="card-img-top" src="{{this.image}}.jpg" alt="Card image cap" style="height: 150px;">
                <div class="card-body" style="margin: 20 20 20 20;">
                    <h6 class="card-title">Name : {{this.name}}</h6>
                    <h6 class="card-title">Price : {{this.price}}</h6>
                    <p class="card-title">category : {{this.category}}</p>
                    <form style="display: none;" id="my-form-{{this.name}}" action="/cart" method="POST">
                        <input type="text" name="id" value="{{this._id}}">
                        <input type="name" name="name" value="{{this.name}}">
                        <input type="name" name="price" value="{{this.price}}">
                        <input type="name" name="category" value="{{this.category}}">
                        <input type="text" name="image" value="{{this.image}}.jpg">
                    </form>
                    <button type="submit" class="btn btn-primary" form="my-form-{{this.name}}">Add to cart</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>